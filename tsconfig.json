{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es6",
      "allowJs": true,
      "lib": [
        "es2019"
      ],
      "module": "commonjs",
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }